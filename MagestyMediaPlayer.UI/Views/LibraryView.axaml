<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:MagestyMediaPlayer.UI.ViewModels"
			 xmlns:views="using:MagestyMediaPlayer.UI.Views"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MagestyMediaPlayer.UI.Views.LibraryView"
			 x:DataType="vm:LibraryViewModel">
	<DockPanel>
		<ListBox Margin="0,4,0,0" ItemsSource="{Binding Items}" Background="Gray">
			<ListBox.ItemTemplate>
				<DataTemplate>
					<views:MediaItemView/>
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>
	</DockPanel>
</UserControl>
